package letter;

import courriers.*;

public class PromissoryLetter extends Inter{
	
	private int amount;

	public PromissoryLetter(Inhabitant sender, Inhabitant receiver, int cost,int secondCost,int amount) {
		super(sender, receiver,cost,secondCost);
		this.amount = amount;
		this.cost = (cost+(1/100)*amount);
	}
	
	public int getAmount(){
		return this.amount;
	}
	
	public void setAmount(int amount){
		this.amount = amount;
	}
	
	public void setCost (int cost){
		this.cost = cost;

	}
	
	public void action (){
		
	}

}
