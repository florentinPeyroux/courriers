package letter;

import courriers.*;

public class PromissoryLetter extends Inter{
	
	private int amount;
	private int beforeDebit;

	public PromissoryLetter(Inhabitant sender, Inhabitant receiver,int amount) {
		super(sender, receiver);
		this.amount = amount;
		PromissoryLetter.cost = (cost+(1/100)*amount+amount);
	}
	
	public int getAmount(){
		return this.amount;
	}
	
	public void setAmount(int amount){
		this.amount = amount;
	}
	
	public void action(){
		beforeDebit=this.sender.getBankAccount().getAmount();
		this.sender.getBankAccount().setAmount(beforeDebit-amount-this.getCost());
		this.receiver.getBankAccount().setAmount(amount);
	}

}
