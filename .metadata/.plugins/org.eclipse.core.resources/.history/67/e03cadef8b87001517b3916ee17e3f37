package letter;


public class RegisteredLetter extends Inter {

	public RegisteredLetter(Letter letter) {
		super(letter.getSender(), letter.getReceiver(), letter.getText(),letter);
		this.cost = letter.getCost()+15;
		isUrgentLetter=false;
	}

	@Override
	public void action() {
		debitBankAccount();
		
	}
	public String getMessage(){
		return "a registered letter whose content is"+letter.getMessage();
	}
}